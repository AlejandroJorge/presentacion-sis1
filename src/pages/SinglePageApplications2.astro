---
import Card from "../components/Card.astro";
import CardContainer from "../components/CardContainer.astro";
import ContentContainer from "../components/ContentContainer.astro";
import TituloLocal from "../components/TituloLocal.astro";
import MainLayout from "../layouts/MainLayout.astro";
import Comentario from "../components/Comentario.astro";
---

<MainLayout name="SinglePageApplications2">
  <TituloLocal contenido="Single page applications" />
  <ContentContainer>
    <CardContainer>
      <Card
        nombre="Framework"
        imagen="https://upload.wikimedia.org/wikipedia/commons/a/a7/React-icon.svg"
      />
    </CardContainer>
    <Comentario
      contenido="JavaScript (generalmente a traves de un framework) controla todo"
    />
  </ContentContainer>
</MainLayout>

<style>
  #text-container {
    flex: 1;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    font-size: 1.5rem;
    justify-content: center;
  }
</style>
