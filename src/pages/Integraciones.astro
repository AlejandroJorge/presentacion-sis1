---
import Card from "../components/Card.astro";
import CardContainer from "../components/CardContainer.astro";
import ContentContainer from "../components/ContentContainer.astro";
import TituloLocal from "../components/TituloLocal.astro";
import { mdxlogo } from "../js/links";
import { storybloklogo } from "../js/links";
import { tailwindlogo } from "../js/links";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout name="Integraciones">
  <TituloLocal contenido="Integraciones" />
  <ContentContainer>
    <CardContainer>
      <Card nombre="Tailwind" imagen={tailwindlogo} />
      <Card nombre="MDx" imagen={mdxlogo} />
      <Card nombre="Storyblok" imagen={storybloklogo} />
    </CardContainer>
  </ContentContainer>
</MainLayout>
