---
import Card from "../components/Card.astro";
import CardContainer from "../components/CardContainer.astro";
import ContentContainer from "../components/ContentContainer.astro";
import TituloLocal from "../components/TituloLocal.astro";
import MainLayout from "../layouts/MainLayout.astro";
import { htmllogo, csslogo } from "../js/links";
---

<MainLayout name="PaginasEstaticas1">
  <TituloLocal contenido="Paginas estaticas" />
  <ContentContainer>
    <CardContainer>
      <Card imagen={htmllogo} />
      <Card imagen={csslogo} />
    </CardContainer>
    <div id="text-container">
      <h4>Muestran contenido <span>estatico</span></h4>
      <h4>
        Para ver otro contenido solo se puede cambiar de pagina con <a
          target="_blank"
          href="https://www.youtube.com/watch?v=dQw4w9WgXcQ">links</a
        >
      </h4>
    </div>
  </ContentContainer>
</MainLayout>

<style>
  #text-container {
    flex: 1;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    font-size: 1.5rem;
  }
</style>
