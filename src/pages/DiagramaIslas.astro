---
import MainLayout from "../layouts/MainLayout.astro";
---
<MainLayout name="DiagramaIslas" prevSlideName="IslasDeInteractividad" nextSlideName="BalanceIslas">
	<h2>Islas de Interactividad</h2>
  <div id="diagram-container">
    <div id="diagram">
      <div class="static">Componente estatico</div>
    <div class="container">
      <div class="static">Componente estatico</div>
      <div class="interactive">Componente interactivo</div>
    </div>
    <div class="static">Componente estatico</div>
  </div>
</div>
</MainLayout>

<style>
  #diagram-container{
    flex: 1;
    display: flex;
    padding: 2.5rem;
  }
  #diagram {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .static,.interactive{
    font-size: xx-large;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .static {
    flex: 1;
    background-color: dimgray;
  }
  .interactive {
    flex: 1;
    background-color: darkcyan;
  }
  .container{
    display: flex;
    column-gap: 1rem;
    align-items: normal;
    flex: 1;
  }
</style>
