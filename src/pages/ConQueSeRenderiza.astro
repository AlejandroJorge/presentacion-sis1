---
import Card from "../components/Card.astro";
import CardContainer from "../components/CardContainer.astro";
import MainLayout from "../layouts/MainLayout.astro";
import TituloLocal from "../components/TituloLocal.astro";
import ContentContainer from "../components/ContentContainer.astro";
import { htmllogo, csslogo, javascriptlogo } from "../js/links";
---

<MainLayout name="ConQueSeRenderiza">
  <TituloLocal contenido="Con que se renderiza" />
  <ContentContainer>
    <CardContainer>
      <Card nombre="HTML" imagen={htmllogo} contenido="Que se vean cosas" />
      <Card
        nombre="CSS"
        imagen={csslogo}
        contenido="Que las cosas se vean bien"
      />
      <Card
        nombre="JavaScript"
        contenido="Que se pueda interactuar con las cosas"
        imagen={javascriptlogo}
      />
    </CardContainer>
  </ContentContainer>
</MainLayout>
