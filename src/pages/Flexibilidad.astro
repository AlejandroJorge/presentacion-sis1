---
import MainLayout from "../layouts/MainLayout.astro";
---
<MainLayout name="Flexibilidad" prevSlideName="MasAlla" nextSlideName="EjemploInteractividad">
  <h2>Flexibilidad</h2>
  <div class="container">
    <div class="box">
      <img width="80%" src="https://upload.wikimedia.org/wikipedia/commons/a/a7/React-icon.svg"/>
    </div>
    <div class="box">
      <img width="80%" src="https://upload.wikimedia.org/wikipedia/commons/9/95/Vue.js_Logo_2.svg"/>
    </div>
    <div class="box">
      <img width="80%" src="https://upload.wikimedia.org/wikipedia/commons/1/1b/Svelte_Logo.svg"/>
    </div>
  </div>
</MainLayout>

<style>
  .container {
    flex:1;
    display: flex;
    column-gap: 3rem;
  }
  .box {
    margin: 4rem;
    background-color: dimgray;
    border-radius: 1rem;
    border: 0.2rem solid white;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 1rem;
  }
  ul {
    text-align: left;
  }
</style>