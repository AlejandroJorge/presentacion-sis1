---
import { ViewTransitions } from "astro:transitions";
import Button from "../components/Button.astro";
import { darker, dark, lighter } from "../js/palette";

const { name } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{name ? name : "Presentacion"}</title>
    <ViewTransitions />
  </head>
  <body style=`background-color:${darker}; color:${darker}`>
    <header style=`color:${lighter};`>
      <p id="repo-text">
        Este proyecto esta disponible en <a
          style=`color:${dark};`
          target="_blank"
          id="repo-link"
          href="https://github.com/AlejandroJorge/presentacion-sis1"
          >este repositorio de Github</a
        >
      </p>
    </header>

    <main>
      <div id="slide-container">
        <div
          id="content-container"
          style=`color:${lighter}; border-color:${lighter}`
        >
          <slot />
        </div>
      </div>
    </main>

    <footer>
      <Button current={name} type="prev" />
      <Button />
      <Button current={name} type="next" />
    </footer>
    <style is:global>
      * {
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
        margin: 0;
        padding: 0;
      }
      body {
        min-height: 100vh;
        display: grid;
        grid-template-rows: 10vh auto 10vh;
      }
      header,
      footer {
        display: flex;
        min-height: 10vh;
      }
      header {
        justify-content: center;
        align-items: center;
      }
      header > h1 {
        margin-right: 3rem;
      }
      footer {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
      }
      main {
        display: flex;
      }
      a {
        user-select: none;
      }
      #slide-container {
        flex: 1;
        display: flex;
        padding-left: 8rem;
        padding-right: 8rem;
      }
      #content-container {
        border: 0.3rem solid;
        border-radius: 1.5rem;
        padding: 2rem;
        flex: 1;
        display: flex;
        flex-direction: column;
      }
      @media (min-width: 1600px) {
        #repo-text {
          font-size: 1.5rem;
        }
      }
    </style>
  </body>
</html>
