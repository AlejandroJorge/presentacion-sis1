---
import LinkButton from "../components/LinkButton.astro"

const {name,prevSlideName="#",nextSlideName="#"} = Astro.props;
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Presentacion{name? ` | ${name}`: ""}</title>
	</head>
	<body>

    <header>
			<h1>Presentacion para SIS1</h1>
		</header>

		<main>
			<div id="slide-container">
				<div id="content-container">
					<slot></slot>
				</div>
			</div>
		</main>

		<footer>
			<LinkButton text="Diapositiva Previa" direction={prevSlideName}></LinkButton>
			<p>Este proyecto esta disponible en <a id="repo-link" href="https://github.com/AlejandroJorge/presentacion-sis1">este repositorio de Github</a></p>
			<LinkButton text="Diapositiva Siguiente" direction={nextSlideName}></LinkButton>
		</footer>

	</body>
</html>

<style is:global>
	* {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		margin: 0;
		padding: 0;
	}
	body {
		min-height: 100vh;
		display: grid;
		grid-template-rows: 10vh auto 10vh;
	}
	header,footer {
		display: flex;
		min-height: 10vh;
		background-color: black;
		color: white
	}
	header{
		justify-content: center;
		align-items: center;
	}
	footer {
		display: flex;
		justify-content: space-evenly;
		align-items: center;
	}
	main {
		display: flex;
	}
	#slide-container{
		background-color: black;
		flex: 1;
		display: flex;
		padding-left: 8rem;
		padding-right: 8rem;
	}
	#content-container{
		border: 0.3rem solid white;
		border-radius: 1.5rem;
		padding: 2rem;
		flex: 1;
		color: white;
		display: flex;
	}
	#repo-link{
		color: dimgray;
	}
</style>