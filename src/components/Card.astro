---
import { lighter, dark } from "../js/palette";
const { nombre, imagen, contenido } = Astro.props;
---

<div style=`border-color: ${lighter}; background-color:${dark}`>
  {nombre ? <h3>{nombre}</h3> : null}
  {imagen ? <img src={imagen} /> : null}
  {contenido ? <p>{contenido}</p> : null}
  <slot />
</div>

<style>
  div {
    margin: 4rem;
    background-color: dimgray;
    border-radius: 1rem;
    border: 0.2rem solid;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 1rem;
    max-width: 20rem;
  }
  img {
    width: 8rem;
    max-height: 8rem;
  }
</style>
