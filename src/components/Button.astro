---
import { getNextPage, getPrevPage } from "../js/pages";
import { darker, lighter } from "../js/palette";

const { current = "", type = "" } = Astro.props;

let direction, name;

if (type == "next") {
  name = "Siguiente";
  direction = getNextPage(current);
} else if (type == "prev") {
  name = "Anterior";
  direction = getPrevPage(current);
} else {
  direction = "";
  name = "Volver al inicio";
}
---

<a href={`/${direction}`} style=`color: ${darker};`>
  <div style=`background-color: ${lighter};`>
    {name}
  </div>
</a>

<style>
  div {
    padding: 1rem;
    transition: 0.15s;
    border-radius: 0.5rem;
    min-width: 10rem;
    text-align: center;
  }
  a {
    text-decoration: none;
    font-weight: 800;
  }
  div:active {
    transform: scale(1.05);
  }

  @media (min-width: 1600px) {
    div {
      font-size: 1.5rem;
    }
  }
</style>
